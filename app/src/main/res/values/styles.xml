<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/card_view</item>
    </style>

    <!-- common View attribute style -->
    <!-- *************************** -->

    <!-- group view -->

    <style name="layout_container_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout_container_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_container_wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_container_flattened_width">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- View style -->

    <!-- editor root layout -->
    <style name="editor_root_layout" parent="layout_container_match">
        <item name="android:background">@drawable/background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- list_item root layout -->
    <style name="list_item_root_layout" parent="layout_container_wide">
        <item name="android:background">@drawable/background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- card view style -->
    <style name="card_view" parent="@style/CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/colorCardView</item>
    </style>

    <!-- main TextView style -->
    <style name="main_text_view" parent="layout_container_wrap">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- editor LinearLayout -->
    <style name="edit_linear_layout" parent="layout_container_wide">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/value_8</item>
    </style>

    <!-- editor TextView Style -->
    <style name="editor_text_view" parent="layout_container_flattened_width">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Editor EditText Style -->
    <style name="edit_text" parent="layout_container_flattened_width">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">3</item>
    </style>

</resources>
